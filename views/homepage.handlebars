<!-- Loop over each object in the blog array -->
{{#each blogs as |blog|}}
  <div class='row mb-4 blog'>
    <div class='col-md-6'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->

        <a href='/blog/{{blog.id}}'>{{blog.title}}</a>
      </h2>
      <p>posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{blog.content}}
      </p>
      {{#each blog.comments}}
      <p>{{commentContent}}
        Posted By:{{user.name}} on {{format_date date_created}}
      </p>
      {{/each}}
    </div>
    <div class='col-md-6 justify-center blog-block'>
      <textarea rows='5' cols='20'></textarea>
      <div class='col'>
        <button data-id='{{blog.id}}' class='comment-btn col'>ADD COMMENT</button>
      </div>
    </div>
  </div>
{{/each}}
